<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/NumberDisplay"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:gravity="center|end"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAllClear"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_rounded_bordered_button"
                android:text="AC"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="7"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="4"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="1"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="0"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPercentage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_rounded_bordered_button"
                android:text="%"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="8"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="5"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/buttonComa"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="."
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/grey_rounded_bordered_button"
                android:text="DEL"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="9"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="6"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/buttonDecision"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/purple_rounded_bordered_button"
                android:text="+/-"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded_button"
                android:text="/"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="40sp"/>

            <Button
                android:id="@+id/buttonTimes"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded_button"
                android:text="X"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded_button"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="40sp"/>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded_button"
                android:text="+"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="40sp"/>

            <Button
                android:id="@+id/buttonSum"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded_button"
                android:text="="
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="40sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>